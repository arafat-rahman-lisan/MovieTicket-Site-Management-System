@model Movie_Site_Management_System.ViewModels.Account.CreateUserVM
@{
    ViewData["Title"] = "Create User";
    ViewBag.GlassHeader = true;
}
<link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/users/users-crud.css" asp-append-version="true" />

<section class="admin-ultra-shell">
    <div class="film-rail film-rail--left"></div>
    <div class="film-rail film-rail--right"></div>
    <div class="ultra-aura"></div>
    <div class="film-grain"></div>

    <div class="container py-4 position-relative">
        <div class="ultra-card">
            <div class="ultra-card__shine"></div>

            <div class="ultra-card__header">
                <h2 class="ultra-title">Create User</h2>
                <div class="ms-auto">
                    <a asp-action="Index" class="btn glass-btn alt">Back</a>
                </div>
            </div>

            <form asp-action="Create" method="post" class="ultra-form">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control glass-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control glass-input" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control glass-input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select glass-input"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn glass-btn">Create</button>
                    <a asp-action="Index" class="btn glass-btn alt">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</section>
