@model Movie_Site_Management_System.Models.Seat
@{
    ViewData["Title"] = "Edit Seat";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Edit Seat</h2>
    <a asp-action="Index" asp-route-hallId="@Model.HallId" class="btn btn-outline-secondary btn-sm">Back</a>
</div>

<form asp-action="Edit" method="post" class="card card-body">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SeatId" />
    <partial name="_SeatForm" model="Model" />
    <div class="mt-3">
        <button class="btn btn-primary">Update</button>
    </div>
</form>
