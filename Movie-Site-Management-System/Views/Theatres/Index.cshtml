@model IEnumerable<Theatre>
@using Movie_Site_Management_System.Models
@{
    ViewData["Title"] = "Theatres";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Theatres</h2>
    <a asp-controller="Theatres" asp-action="Create" class="btn btn-success btn-sm">+ Add Theatre</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning mb-0">No theatres found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Active</th>
                <th style="width:220px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.City</td>
                    <td>
                        <span class="badge @(t.IsActive ? "bg-success" : "bg-secondary")">
                            @(t.IsActive ? "Yes" : "No")
                        </span>
                    </td>
                    <td class="text-start">
                        <a asp-controller="Theatres" asp-action="Edit" asp-route-id="@t.TheatreId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-controller="Theatres" asp-action="Details" asp-route-id="@t.TheatreId" class="btn btn-sm btn-secondary me-1">Details</a>
                        <a asp-controller="Theatres" asp-action="Delete" asp-route-id="@t.TheatreId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
