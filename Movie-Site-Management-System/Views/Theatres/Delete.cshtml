@model Movie_Site_Management_System.Models.Theatre
@{
    ViewData["Title"] = "Delete Theatre";
    ViewBag.GlassHeader = true;
    var hallCount = (int)(ViewBag.HallCount ?? 0);
    bool blocked = hallCount > 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theatre/theatre-crud.css" asp-append-version="true" />
}

<section class="admin-ultra-shell">
    <div class="film-rail film-rail--left" aria-hidden="true"></div>
    <div class="film-rail film-rail--right" aria-hidden="true"></div>
    <div class="ultra-aura"></div>
    <div class="film-grain"></div>

    <div class="container py-4 position-relative">
        <div class="ultra-card">
            <div class="ultra-card__shine"></div>

            <div class="ultra-card__header">
                <h2 class="ultra-title mb-0">
                    <svg class="title-icon" width="22" height="22" viewBox="0 0 24 24" aria-hidden="true">
                        <defs>
                            <linearGradient id="cinexGradDel" x1="0%" y1="0%" x2="100%" y2="0%">
                                <stop offset="0%" stop-color="#7dd3fc" />
                                <stop offset="50%" stop-color="#a78bfa" />
                                <stop offset="100%" stop-color="#60a5fa" />
                            </linearGradient>
                        </defs>
                        <rect x="2" y="5" width="20" height="14" rx="3" ry="3" fill="url(#cinexGradDel)" />
                        <rect x="5" y="7" width="2" height="2" rx="1" fill="#0b1020" opacity=".85" />
                        <rect x="17" y="7" width="2" height="2" rx="1" fill="#0b1020" opacity=".85" />
                    </svg>
                    <span>Delete Theatre</span>
                </h2>

                <a asp-action="Index" class="btn chip chip--muted btn-sm">Back to List</a>
            </div>

            <!-- Scrollable content -->
            <div class="ultra-scroll p-3">
                <div class="ultra-alert @(blocked ? "ultra-alert--warning" : "ultra-alert--danger")">
                    @if (blocked)
                    {
                        <strong>Blocked:</strong>
                        <span> This theatre has <strong>@hallCount</strong> hall(s). You must delete or reassign those halls before deleting this theatre.</span>
                    }
                    else
                    {
                        <strong>Are you sure?</strong>
                        <span> This will permanently delete <strong>@Model.Name</strong>.</span>
                    }
                </div>

                <div class="kv-dim mt-3">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">City</dt>
                        <dd class="col-sm-9">@Model.City</dd>

                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Active</dt>
                        <dd class="col-sm-9 d-flex align-items-center">
                            @if (Model.IsActive)
                            {
                                <span class="cine-dot cine-dot--on me-2"></span>
                            
                                <span>Yes</span>
                            }
                            else
                            {
                                <span class="cine-dot cine-dot--off me-2"></span>
                            
                                <span>No</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="text-danger mt-3">
                    @Html.ValidationSummary()
                </div>

                <div class="mt-3 d-flex gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TheatreId" />
                        <button type="submit" class="btn chip chip--danger btn-sm" @(blocked ? "disabled" : "")>
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index" class="btn chip chip--muted btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
