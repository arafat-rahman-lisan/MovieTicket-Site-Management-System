@model IEnumerable<HallSlot>
@using Movie_Site_Management_System.Models
@{
    ViewData["Title"] = "Hall Slots";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Hall Slots</h2>
    <a asp-controller="HallSlots" asp-action="Create" class="btn btn-success btn-sm">+ Add Slot</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Hall</label>
        <select class="form-select" name="hallId" asp-items="ViewBag.Halls">
            <option value="">-- All --</option>
        </select>
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-secondary">Filter</button>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No hall slots found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Theatre / Hall</th>
                <th>Slot</th>
                <th>Time</th>
                <th>Active</th>
                <th style="width:220px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Hall?.Theatre?.Name / @s.Hall?.Name</td>
                    <td>S@s.SlotNumber</td>
                    <td>@s.StartTime.ToString("HH\\:mm") - @s.EndTime.ToString("HH\\:mm")</td>
                    <td>
                        <span class="badge @(s.IsActive ? "bg-success" : "bg-secondary")">
                            @(s.IsActive ? "Yes" : "No")
                        </span>
                    </td>
                    <td class="text-start">
                        <a asp-controller="HallSlots" asp-action="Details" asp-route-id="@s.HallSlotId" class="btn btn-sm btn-secondary me-1">Details</a>
                        <a asp-controller="HallSlots" asp-action="Edit" asp-route-id="@s.HallSlotId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-controller="HallSlots" asp-action="Delete" asp-route-id="@s.HallSlotId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
