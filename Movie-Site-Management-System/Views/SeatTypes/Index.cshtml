@model IEnumerable<Movie_Site_Management_System.Models.SeatType>
@using Movie_Site_Management_System.Models

@{
    ViewData["Title"] = "Seat Types";
    var items = Model ?? Enumerable.Empty<SeatType>();
    var count = items.Count();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">
        Seat Types
        <span class="badge bg-secondary align-middle ms-2">@count</span>
    </h2>
    <a asp-action="Create" class="btn btn-success btn-sm">+ Add Seat Type</a>
</div>

@if (TempData["Success"] is string sMsg)
{
    <div class="alert alert-success">@sMsg</div>
}
@if (TempData["Error"] is string eMsg)
{
    <div class="alert alert-danger">@eMsg</div>
}

@if (!items.Any())
{
    <div class="alert alert-warning">No seat types found.</div>
}
else
{
    <div class="mb-3">
        <input type="text" id="searchBox" class="form-control"
               placeholder="🔍 Search seat types..." />
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle" id="seatTypesTable">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-end">Base Price</th>
                    <th style="width:220px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var st in items)
                {
                    <tr>
                        <td>@st.Name</td>
                        <td>@st.Description</td>
                        <td class="text-end">@string.Format("{0:0.00}", st.BasePrice)</td>
                        <td class="text-start">
                            <a asp-action="Details" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-secondary me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        const searchBox = document.getElementById("searchBox");
        const rows = document.querySelectorAll("#seatTypesTable tbody tr");

        searchBox?.addEventListener("keyup", function () {
            const term = this.value.toLowerCase();
            rows.forEach(row => {
                const text = row.innerText.toLowerCase();
                row.style.display = text.includes(term) ? "" : "none";
            });
        });
    </script>
}
