@model IEnumerable<SeatType>
@using Movie_Site_Management_System.Models
@{
    ViewData["Title"] = "Seat Types";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Seat Types</h2>
    <a asp-controller="SeatTypes" asp-action="Create" class="btn btn-success btn-sm">+ Add Seat Type</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No seat types found.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Base Price</th>
                <th style="width:220px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var st in Model)
            {
                <tr>
                    <td>@st.Name</td>
                    <td>@st.Description</td>
                    <td>@String.Format("{0:0.00}", st.BasePrice)</td>
                    <td class="text-start">
                        <a asp-controller="SeatTypes" asp-action="Details" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-secondary me-1">Details</a>
                        <a asp-controller="SeatTypes" asp-action="Edit" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-controller="SeatTypes" asp-action="Delete" asp-route-id="@st.SeatTypeId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
