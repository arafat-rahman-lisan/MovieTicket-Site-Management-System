@model Movie_Site_Management_System.Models.Payment
@{
    ViewData["Title"] = "Payment Successful";
    ViewBag.GlassHeader = true;
}

<link rel="stylesheet" href="~/css/checkout/checkout-glass.css" asp-append-version="true" />

<section class="checkout-shell">
    <div class="checkout-bg"></div>
    <div class="checkout-aura"></div>

    <div class="container py-4 position-relative">
        <div class="checkout-glass glass-shine p-4">
            <div class="checkout-title mb-2">Payment Successful</div>

            <div class="ticket-card mb-3">
                <dl class="kv">
                    <dt>Invoice</dt>
                    <dd>@Model.InvoiceNo</dd>
                    <dt>Txn</dt>
                    <dd>@Model.ProviderTxnId</dd>
                    <dt>Method</dt>
                    <dd>@Model.PaymentMethod.Name</dd>
                </dl>
                <div class="glass-alert success mt-3">
                    Your booking is confirmed. Enjoy the show!
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2">
                <a class="action-btn"
                   asp-controller="Payments"
                   asp-action="InvoicePdf"
                   asp-route-bookingId="@Model.BookingId">
                    Download PDF
                </a>

                <a class="action-btn"
                   asp-controller="Bookings"
                   asp-action="Details"
                   asp-route-id="@Model.BookingId">
                    View Booking
                </a>

                <a class="btn btn-ghost"
                   asp-controller="Movies"
                   asp-action="Index">
                    Back to Movies
                </a>
            </div>
        </div>
    </div>
</section>
