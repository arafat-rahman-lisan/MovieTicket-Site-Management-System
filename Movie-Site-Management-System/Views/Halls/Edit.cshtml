@model Movie_Site_Management_System.ViewModels.Halls.HallFormVM
@{
    ViewData["Title"] = "Edit Hall";
}
<h2 class="mb-3">Edit Hall</h2>

<form asp-action="Edit" method="post" class="card card-body">
    <input type="hidden" asp-for="HallId" />
    <partial name="_HallForm" model="Model" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
