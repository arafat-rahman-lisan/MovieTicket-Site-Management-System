@model Movie_Site_Management_System.Models.Hall
@{
    ViewData["Title"] = "Hall Details";
    var seatCount = (int?)ViewBag.SeatCount ?? 0;
    var slotCount = (int?)ViewBag.SlotCount ?? 0;
    var showCount = (int?)ViewBag.ShowCount ?? 0;
}

<h2 class="mb-3">Hall: @Model.Name</h2>

@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

<dl class="row">
    <dt class="col-sm-3">Theatre</dt>
    <dd class="col-sm-9">@Model.Theatre?.Name</dd>

    <dt class="col-sm-3">Capacity</dt>
    <dd class="col-sm-9">@Model.Capacity</dd>

    <dt class="col-sm-3">Seatmap Version</dt>
    <dd class="col-sm-9">@Model.SeatmapVersion</dd>

    <dt class="col-sm-3">Active</dt>
    <dd class="col-sm-9">@((Model.IsActive) ? "Yes" : "No")</dd>
</dl>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="fw-semibold">Seats</div>
                <div class="display-6">@seatCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="fw-semibold">Slots</div>
                <div class="display-6">@slotCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="fw-semibold">Shows</div>
                <div class="display-6">@showCount</div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.HallId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
