@model IEnumerable<Movie_Site_Management_System.Models.Hall>
@{
    ViewData["Title"] = "Halls";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Halls</h2>
    <a asp-action="Create" class="btn btn-primary">+ New Hall</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Theatre</label>
        <select class="form-select" name="theatreId" asp-items="ViewBag.Theatres" onchange="this.form.submit()">
            <option value="">-- All --</option>
        </select>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">No halls found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Theatre</th>
                <th>Name</th>
                <th class="text-end">Capacity</th>
                <th class="text-center">Seatmap</th>
                <th class="text-center">Active</th>
                <th style="width:200px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in Model)
            {
                <tr>
                    <td>@h.Theatre?.Name</td>
                    <td>@h.Name</td>
                    <td class="text-end">@h.Capacity</td>
                    <td class="text-center">@h.SeatmapVersion</td>
                    <td class="text-center">
                        @if (h.IsActive)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@h.HallId" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@h.HallId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@h.HallId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
