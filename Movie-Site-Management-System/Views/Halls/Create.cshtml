@model Movie_Site_Management_System.ViewModels.Halls.HallFormVM
@{
    ViewData["Title"] = "Create Hall";
}
<h2 class="mb-3">Create Hall</h2>

<form asp-action="Create" method="post" class="card card-body">
    <partial name="_HallForm" model="Model" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
