@model Movie_Site_Management_System.ViewModels.Halls.HallFormVM

<div class="ultra-form row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control glass-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="TheatreId" class="form-label"></label>
        <select asp-for="TheatreId" class="form-select glass-input" asp-items="Model.Theatres">
            <option value="">-- Select Theatre --</option>
        </select>
        <span asp-validation-for="TheatreId" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" type="number" class="form-control glass-input" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="SeatmapVersion" class="form-label"></label>
        <input asp-for="SeatmapVersion" type="number" class="form-control glass-input" />
        <span asp-validation-for="SeatmapVersion" class="text-danger"></span>
    </div>

    <div class="col-md-4 d-flex align-items-end">
        <div class="form-check form-switch ultra-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>
    </div>
</div>
