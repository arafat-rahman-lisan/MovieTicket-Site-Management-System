@model Movie_Site_Management_System.ViewModels.Halls.HallFormVM

<div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="TheatreId" class="form-label"></label>
        <select asp-for="TheatreId" class="form-select" asp-items="Model.Theatres">
            <option value="">-- Select Theatre --</option>
        </select>
        <span asp-validation-for="TheatreId" class="text-danger"></span>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="col-md-3 mb-3">
        <label asp-for="SeatmapVersion" class="form-label"></label>
        <input asp-for="SeatmapVersion" type="number" class="form-control" />
        <span asp-validation-for="SeatmapVersion" class="text-danger"></span>
    </div>
</div>

<div class="form-check mb-3">
    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
    <label class="form-check-label" asp-for="IsActive"></label>
</div>
