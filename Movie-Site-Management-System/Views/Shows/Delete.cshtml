@model Movie_Site_Management_System.Models.Show

@{
    ViewData["Title"] = "Delete Show";
    ViewBag.GlassHeader = true;
}

<link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/shows/shows-crud.css" asp-append-version="true" />

<section class="admin-ultra-shell">
    <div class="film-rail film-rail--left"></div>
    <div class="film-rail film-rail--right"></div>
    <div class="ultra-aura"></div>
    <div class="film-grain"></div>

    <div class="container py-4 position-relative">
        <div class="ultra-card">
            <div class="ultra-card__shine"></div>

            <div class="ultra-card__header">
                <h2 class="ultra-title">Delete Show</h2>
            </div>

            <div class="ultra-alert ultra-alert--danger">
                Are you sure you want to delete this show?
            </div>

            <dl class="kv-dim mt-3">
                <dt>Movie</dt>
                <dd>@Model.Movie?.Title</dd>

                <dt>Theatre</dt>
                <dd>@Model.HallSlot?.Hall?.Theatre?.Name</dd>

                <dt>Hall</dt>
                <dd>@Model.HallSlot?.Hall?.Name</dd>

                <dt>Time</dt>
                <dd>
                    @Model.HallSlot?.StartTime.ToString("hh:mm tt")
                    -
                    @Model.HallSlot?.EndTime.ToString("hh:mm tt")
                </dd>

                <dt>Date</dt>
                <dd>@Model.ShowDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ShowId" />
                <button type="submit" class="btn btn-delete">Delete</button>
                <a asp-action="Index" asp-route-date="@Model.ShowDate" class="btn btn-cancel">Cancel</a>
            </form>
        </div>
    </div>
</section>
