@model IEnumerable<Movie_Site_Management_System.Models.Show>
@using Movie_Site_Management_System.Models
@{
    ViewData["Title"] = "Shows";
    ViewBag.GlassHeader = true;

    var date = (DateOnly?)ViewBag.Date ?? DateOnly.FromDateTime(DateTime.UtcNow.Date);
    string dateStr = date.ToString("yyyy-MM-dd");
    var items = Model ?? Enumerable.Empty<Show>();
}

<link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/shows/shows-crud.css" asp-append-version="true" />

<section class="admin-ultra-shell">
    <div class="film-rail film-rail--left" aria-hidden="true"></div>
    <div class="film-rail film-rail--right" aria-hidden="true"></div>
    <div class="ultra-aura"></div>
    <div class="film-grain"></div>

    <div class="container py-4 position-relative">
        <div class="ultra-card">
            <div class="ultra-card__shine"></div>

            <div class="ultra-card__header">
                <h2 class="ultra-title">
                    <svg class="title-icon" width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M3 5h18v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5Zm4 2v2h2V7H7Zm0 4v2h2v-2H7Zm0 4v2h2v-2H7Zm4-8v2h2V7h-2Zm0 4v2h2v-2h-2Zm0 4v2h2v-2h-2Zm4-8v2h2V7h-2Zm0 4v2h2v-2h-2Zm0 4v2h2v-2h-2Z" />
                    </svg>
                    Shows
                </h2>

                <div class="toolbar ms-auto">
                    <form method="get" class="filter-grid">
                        <div class="fg-item">
                            <label class="form-label">Theatre</label>
                            <select class="form-select form-select-sm" name="theatreId" asp-items="ViewBag.Theatres">
                                <option value="">All</option>
                            </select>
                        </div>
                        <div class="fg-item">
                            <label class="form-label">Date</label>
                            <input class="form-control form-control-sm" type="date" name="date" value="@dateStr" />
                        </div>
                        <div class="fg-item align-self-end">
                            <button class="btn btn-apply" type="submit">Apply</button>
                        </div>
                        <div class="fg-item align-self-end">
                            <a asp-action="Create" class="btn btn-add">+ Create Show</a>
                        </div>
                    </form>
                </div>
            </div>

            @if (!items.Any())
            {
                <div class="ultra-alert ultra-alert--warn mt-2">No shows found for the selected filters.</div>
            }
            else
            {
                <div class="table-responsive ultra-scroll">
                    <table class="table ultra-table align-middle">
                        <thead>
                            <tr>
                                <th>Theatre</th>
                                <th>Hall</th>
                                <th>Slot</th>
                                <th>Time</th>
                                <th>Movie</th>
                                <th>Language</th>
                                <th>Status</th>
                                <th style="width:280px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in items)
                            {
                                var theatreName = s.HallSlot?.Hall?.Theatre?.Name ?? "—";
                                var hallName = s.HallSlot?.Hall?.Name ?? "—";
                                var slotNum = s.HallSlot?.SlotNumber ?? 0;
                                var timeText = s.HallSlot != null
                                ? $"{s.HallSlot.StartTime:HH\\:mm} - {s.HallSlot.EndTime:HH\\:mm}"
                                : "—";
                                var lang = string.IsNullOrWhiteSpace(s.Language) ? "—" : s.Language;
                                <tr>
                                    <td>@theatreName</td>
                                    <td>@hallName</td>
                                    <td>S@slotNum</td>
                                    <td>@timeText</td>
                                    <td>@(s.Movie?.Title ?? "—")</td>
                                    <td>@lang</td>
                                    <td>
                                        @if (s.IsCancelled)
                                        {
                                            <span class="badge badge-cancelled">Cancelled</span>
                                        }
                                        else if (s.IsActive)
                                        {
                                            <span class="badge badge-active">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-muted">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-start">
                                        <a asp-controller="ShowSeats" asp-action="Map" asp-route-showId="@s.ShowId" class="btn btn-chip">Seat Map</a>
                                        <a asp-controller="Shows" asp-action="Details" asp-route-id="@s.ShowId" class="btn btn-chip">Details</a>
                                        <a asp-controller="Shows" asp-action="Edit" asp-route-id="@s.ShowId" class="btn btn-chip btn-chip--ok">Edit</a>
                                        <a asp-controller="Shows" asp-action="Delete" asp-route-id="@s.ShowId" class="btn btn-chip btn-chip--danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>
