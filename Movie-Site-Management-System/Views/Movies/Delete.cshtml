@model Movie_Site_Management_System.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Delete Movie</h2>
<hr />

@if (Model.Shows != null && Model.Shows.Any())
{
    <div class="alert alert-danger">
        Cannot delete this movie because it has @Model.Shows.Count shows scheduled.
    </div>
    <a asp-action="AdminIndex" class="btn btn-secondary">Back</a>
}
else
{
    <div class="alert alert-warning">
        Are you sure you want to delete '@Model.Title'?
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MovieId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminIndex" class="btn btn-secondary">Cancel</a>
    </form>
}
