@model Movie_Site_Management_System.ViewModels.Movies.MovieDetailsVM
@{
    ViewData["Title"] = Model?.Title ?? "Movie";
    ViewBag.GlassHeader = true;

    // Prefer BigPoster for the right-side background, fallback to PosterUrl, then placeholder
    var bigPosterRaw = Model?.BigPoster ?? Model?.PosterUrl ?? "/img/placeholder-big.jpg";
    var smallPosterRaw = Model?.PosterUrl ?? "/img/placeholder.jpg";

    var bigPoster = Url.Content(bigPosterRaw);
    var smallPoster = Url.Content(smallPosterRaw);

    DateOnly? sel = ViewBag.SelectedDate is DateOnly d ? d : (DateOnly?)null;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/movies/details.css" asp-append-version="true" />
}

<section class="movie-details-shell">
    <!-- Card frame wrapper -->
    <div class="hero-stage">
        <div class="hero-content">
            <div class="row g-4 align-items-start">
                <!-- LEFT: Poster & meta (kept intact) -->
                <div class="col-lg-4">
                    <div class="poster-stack">
                        <img class="poster-main" src="@smallPoster" alt="@Model?.Title" />
                        <div class="poster-glow"></div>
                        <div class="poster-tag">
                            @(!string.IsNullOrWhiteSpace(Model?.RatingCertificate) ? Model!.RatingCertificate : "2D")
                        </div>
                    </div>

                    <h1 class="movie-title">@Model?.Title</h1>

                    <div class="meta-row">
                        <span class="chip">⭐ @(Model?.Imdb?.ToString("0.0") ?? "0.0")</span>
                        <span class="chip alt">@(!string.IsNullOrWhiteSpace(Model?.Year) ? Model!.Year : DateTime.Now.Year.ToString())</span>
                    </div>

                    <div class="meta-grid">
                        <div class="label">Genre</div>
                        <div class="value">@Model?.Genre</div>

                        <div class="label">Runtime</div>
                        <div class="value">@Model?.RuntimeMinutes min</div>
                    </div>

                    <div class="actions">
                        <a asp-action="Schedule" asp-route-id="@Model!.MovieId" class="btn-glass">Show Time</a>
                        <a href="#" class="btn-glass btn-ghost">Watch Trailer</a>
                    </div>
                </div>

                <!-- RIGHT: BigPosterPath background + content -->
                <div class="col-lg-8">
                    <div class="hero-right" style="--hero: url('@bigPoster');">
                        <div class="hero-right__overlay"></div>

                        <div class="glass-card">
                            <h5 class="section-title">Synopsis</h5>
                            <p>@(string.IsNullOrWhiteSpace(Model?.Synopsis) ? "Coming soon..." : Model!.Synopsis)</p>
                        </div>

                        <div class="glass-card mt-3">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <h5 class="section-title mb-0">Showtime</h5>

                                <!-- Date filter -->
                                <form method="get" asp-action="Details" class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="id" value="@Model!.MovieId" />
                                    <input type="date"
                                           name="date"
                                           class="form-control form-control-sm w-auto form-glass"
                                           value="@(sel.HasValue? sel.Value.ToString("yyyy-MM-dd") : "")" />
                                    <button type="submit" class="btn-glass btn-sm">Filter</button>
                                    <a asp-action="Details" asp-route-id="@Model!.MovieId" class="btn-glass btn-ghost btn-sm">Clear</a>
                                </form>
                            </div>

                            <hr class="hr-soft" />

                            @if ((Model?.DateBlocks?.Count ?? 0) == 0)
                            {
                                <div class="schedule-empty">No shows for this date.</div>
                            }
                            else
                            {
                                @foreach (var block in Model!.DateBlocks!)
                                {
                                    <div class="day-wrapper">
                                        <div class="day-header">
                                            <div class="day">
                                                @block.Date.ToDateTime(new TimeOnly(0, 0)).ToString("dddd")
                                            </div>
                                            <div class="date">
                                                @block.Date.ToDateTime(new TimeOnly(0, 0)).ToString("dd MMM yyyy")
                                            </div>
                                        </div>

                                        <!-- GRID OF THEATRE CELLS -->
                                        <div class="date-grid">
                                            @foreach (var theatreGroup in (block.Items ?? Enumerable.Empty<Movie_Site_Management_System.ViewModels.Shows.ShowtimeItemVM>())
                                                                                .GroupBy(s => string.IsNullOrWhiteSpace(s.Theatre) ? "Unknown Theatre" : s.Theatre))
                                            {
                                                <div class="theatre-cell">
                                                    <div class="theatre-name">@theatreGroup.Key</div>

                                                    @foreach (var hallGroup in theatreGroup.GroupBy(s => string.IsNullOrWhiteSpace(s.Hall) ? "Hall" : s.Hall))
                                                    {
                                                        <div class="hall-row">
                                                            <div class="hall-name">@hallGroup.Key</div>
                                                            <div class="times-list">
                                                                @foreach (var s in hallGroup.OrderBy(x => x.StartTime))
                                                                {
                                                                    <a class="time-btn"
                                                                       asp-controller="ShowSeats"
                                                                       asp-action="Map"
                                                                       asp-route-showId="@s.ShowId">
                                                                        @s.StartTime.ToString("hh:mm tt")
                                                                    </a>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div><!-- /.hero-right -->
                </div>
            </div>
        </div>
    </div>
</section>
