@model Movie_Site_Management_System.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
    ViewBag.GlassHeader = true;
}
<link rel="stylesheet" href="~/css/admin-glass-ultra.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/movies/movies-crud.css" asp-append-version="true" />

<section class="admin-ultra-shell">
    <div class="film-rail film-rail--left" aria-hidden="true"></div>
    <div class="film-rail film-rail--right" aria-hidden="true"></div>
    <div class="ultra-aura"></div>
    <div class="film-grain"></div>

    <div class="container py-4 position-relative">
        <div class="ultra-card">
            <div class="ultra-card__shine"></div>

            <div class="ultra-card__header">
                <h2 class="ultra-title">Add Movie</h2>
                <div class="ms-auto d-flex gap-2">
                    <a asp-action="MovieManagement" class="btn glass-btn alt">Back</a>
                </div>
            </div>

            <div class="px-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control glass-input" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Genre" class="form-label">Genre</label>
                            <select asp-for="Genre" class="form-select glass-input"
                                    asp-items="Html.GetEnumSelectList<Movie_Site_Management_System.Data.Enums.MovieGenre>()">
                            </select>
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select glass-input"
                                    asp-items="Html.GetEnumSelectList<Movie_Site_Management_System.Data.Enums.MovieStatus>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="RuntimeMinutes" class="form-label">Runtime (min)</label>
                            <input asp-for="RuntimeMinutes" class="form-control glass-input" />
                            <span asp-validation-for="RuntimeMinutes" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="ImdbRating" class="form-label">IMDB</label>
                            <input asp-for="ImdbRating" class="form-control glass-input" />
                            <span asp-validation-for="ImdbRating" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="ReleaseDate" class="form-label">Release</label>
                            <input asp-for="ReleaseDate" type="date" class="form-control glass-input" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SmallPosterPath" class="form-label">Small Poster Path</label>
                            <input asp-for="SmallPosterPath" class="form-control glass-input" />
                            <span asp-validation-for="SmallPosterPath" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="BigPosterPath" class="form-label">Big Poster Path</label>
                            <input asp-for="BigPosterPath" class="form-control glass-input" />
                            <span asp-validation-for="BigPosterPath" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Synopsis" class="form-label">Synopsis</label>
                            <textarea asp-for="Synopsis" rows="4" class="form-control glass-input"></textarea>
                            <span asp-validation-for="Synopsis" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn glass-btn">Create</button>
                        <a asp-action="MovieManagement" class="btn glass-btn alt">Cancel</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
