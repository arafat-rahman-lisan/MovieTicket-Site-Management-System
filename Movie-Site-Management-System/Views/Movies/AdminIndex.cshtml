@model IEnumerable<Movie_Site_Management_System.Models.Movie>
@{
    ViewData["Title"] = "Manage Movies";
}

<h2>Manage Movies</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Movie</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Status</th>
            <th>Runtime</th>
            <th>IMDB</th>
            <th>Release</th>
            <th style="width:200px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(movie.SmallPosterPath))
                    {
                        <img src="@movie.SmallPosterPath" alt="Poster" style="height:60px" />
                    }
                </td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Status</td>
                <td>@movie.RuntimeMinutes min</td>
                <td>@movie.ImdbRating</td>
                <td>@movie.ReleaseDate?.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
