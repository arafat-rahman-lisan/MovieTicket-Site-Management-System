@model Movie_Site_Management_System.ViewModels.Account.ChangePasswordVM
@{
    ViewData["Title"] = "Change password";
    ViewBag.GlassHeader = true;
    ViewBag.PageLabel = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account/profile-glass.css" asp-append-version="true" />
}

<div class="admin-ultra-shell">
    <div class="film-rail film-rail--left" aria-hidden="true"></div>
    <div class="film-rail film-rail--right" aria-hidden="true"></div>
    <div class="aura aura--blue" aria-hidden="true"></div>
    <div class="aura aura--violet" aria-hidden="true"></div>

    <div class="ultra-card ultra-card--profile">
        <div class="ultra-card__header">
            <h1 class="ultra-title"><span class="title-glass">Change password</span></h1>
            <span class="ultra-sub">Keep your account secure</span>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger glass-alert mb-3">Please fix the errors below.</div>
        }

        <div class="ultra-card__body ultra-scroll">
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="ultra-form grid-2">
                    <div class="form-group">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        <input asp-for="CurrentPassword" class="form-control glass-input" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control glass-input" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control glass-input" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="actions">
                    <button type="submit" class="btn btn-primary chip">
                        <span class="btn-shine"></span>
                        Update password
                    </button>
                    <a asp-action="Profile" class="btn btn-outline-light chip">
                        <span class="btn-shine"></span>
                        Back to profile
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
